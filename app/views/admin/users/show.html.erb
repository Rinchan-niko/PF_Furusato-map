<div class="container admin-customer">
  <div class= "row">
    <h4 class="my-4"><%= @user.name %>さんの会員詳細</h4>
    <table class="table">
      <tbody>
        <tr>
          <th>会員ID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th>画像</th>
          <td><%= image_tag @user.get_profile_image(50,50) %></td>
        </tr>
        <tr>
          <th>ニックネーム</th>
          <td><%= @user.nickname %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if @user.is_active  %>
              <div class="text-success">有効</div>
            <% else %>
              <div class="text-muted">退会</div>
            <% end %>
          </td>
        </tr>
        <td><%= link_to "編集する",edit_admin_user_path(@user.id),class: "btn btn-success my-3" %></td>
      </tbody>
    </table>
  </div>
</div>