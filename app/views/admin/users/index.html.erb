<div class="container admin-customer">
  <div class="row">
    <h4 class="my-3">会員一覧</h4>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">会員ID</th>
          <th></th>
          <th scope="col">名前</th>
          <th scope="col">メールアドレス</th>
          <th scope="col">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td scope="row"><%= user.id %></td>
            <td><%= image_tag user.get_profile_image(50,50) %></td>
            <td><%= link_to user.name, admin_user_path(user.id) %></td>
            <td><%= user.email %></td>
            <td>
              <% if user.is_active  %>
                <div class="text-success">有効</div>
              <% else %>
                <div class="text-muted">退会</div>
              <% end %>
            </td>
          </tr>
        <% end %>
        <td><%= paginate @users %></td>
      </tbody>
    </table>
  </div>
</div>