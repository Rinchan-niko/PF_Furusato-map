<div class="container">
  <div class="row">
    <div class="col-9 offset-2">
      <div class="customer-login-form">
        <div class="my-2">
          <h4>投稿詳細</h4>
  		    <%= image_tag @post.get_image(500,500) %>
  		    <table class='table'>
  		      <thead>
  		        <tr>
  		          <th>Title</th>
  		          <th>Tag</th>
  		          <th>Prefecture</th>
  		          <th>User</th>
  		          <th colspan="3"></th>
  		        </tr>
  	    	  </thead>
      		  <tbody>
  		        <tr>
                <td><%= @post.title %></td>
                <td><%= @post.tag.name %></td>
                <td><%= @post.prefecture.name %></td>
                <td><%= link_to(@post.user) do %>
                  <%= image_tag @post.user.get_profile_image(50,50) %><br>
                  <%= @post.user.nickname %>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
          <h4><%= @post.content %></h4>
          <%= link_to 'Destroy', admin_post_path(@post.id), method: :delete, class: "btn btn-sm btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>