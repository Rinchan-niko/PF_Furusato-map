<div class="container">
  <div class="row">
    <div class="col-9 offset-2">
      <div class="customer-login-form">
        <div class="my-2">
          <h4>投稿一覧</h4>
          <table class='table table-inverse'>
            <thead>
              <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Tag</th>
                <th>Prefecture</th>
                <th>User</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
              <tr>
                <td><%= image_tag post.get_image(200,200) %></td>
                <td><%= link_to post.title, admin_post_path(post.id) %></td>
                <td><%= post.tag.name %></td>
                <td><%= post.prefecture.name %></td>
                <td>
                  <%= link_to admin_user_path(post.user) do %>
                  <%= image_tag post.user.get_profile_image(50,50) %>
                  <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @posts %>
        </div>
      </div>
    </div>
  </div>
</div>