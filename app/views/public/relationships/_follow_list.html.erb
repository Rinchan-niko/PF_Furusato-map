<% if users.exists? %>
  <table class='table'>
    <thead>
      <tr>
        <th>Image</th>
        <th>Nickname</th>
        <th>Follow</th>
        <th>Follower</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% users.each do |user| %>
      <tbody>
        <tr>
          <td><%= image_tag user.get_profile_image(50,50) %></td>
          <td><%= user.nickname %></td>
          <td><%= user.followings.count %></td>
          <td><%= user.followers.count %></td>
          <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>