<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to(post.user) do %>
          <%= image_tag post.user.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td><%= link_to post.title, post, class: "post_#{post.id}" %></td>
        <td><%= post.content %></td>
        <td id="favorites_buttons_<%= post.id %>">
          <%= render "favorites/favorite", post: post %>
        </td>
        <td>
          <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>