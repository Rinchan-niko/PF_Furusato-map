<div class="container">
  <div class="row">
    <div class="col-9 offset-2">
      <h1><%= @tag.name %></h1>
      <table class='table table-inverse'>
        <thead>
          <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Prefecture</th>
            <th>Like</th>
            <th>User</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @tag.posts.each do |post| %>
            <tr>
              <td><%= image_tag post.get_image(200,200) %></td>
              <td><%= link_to post.title, post, class: "post_#{post.id}" %></td>
              <td><%= link_to post.prefecture.name, (post.prefecture) %></td>
              <td id="favorites_buttons_<%= post.id %>">
                <%= render "public/favorites/favorite", post: post %>
              </td>
              <td><%= link_to (post.user) do %>
                <%= image_tag post.user.get_profile_image(50,50) %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'Back', tags_path, class: "back" %>
    </div>
  </div>
</div>